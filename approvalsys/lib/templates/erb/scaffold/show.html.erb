<!-- Content Header (Page header) -->
<section class="content-header">
  <h1><%= singular_table_name.titleize %>表示</h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
    <li class="active">Here</li>
  </ol>
</section>
<!-- Main content -->
<section class="content">
  <!--------------------------
     | Your Page Content Here |
    -------------------------->
  <div class="row">
    <div class="col-xs-6">
      <div class="box">
        <div class="box-body table-responsive no-padding">
          <p>
            <div class="alert alert-success alert-dismissible">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
              <%%= notice %>
            </div>
          </p>
          <%%= notice %>
          <table class="table">
            <tbody>
              <% attributes.reject(&:password_digest?).each do |attribute| -%>
                <tr>
                  <td><strong><%= attribute.human_name %>:</strong></td>
                  <td><%%= @<%= singular_table_name %>.<%= attribute.name %> %></td>
                </tr>
              <% end -%>
            </tbody>
          </table>
        </div>
        <!-- /.box-body -->
        <div class="box-footer clearfix">
          <div class="no-margin pull-right">
            <%%= link_to '戻る', <%= index_helper %>_path, class: 'btn btn-primary' %>
            <%%= link_to '変更', edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
      <!-- /.box -->
    </div>
  </div>
</section>
<!-- /.content -->
